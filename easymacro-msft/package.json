{
  "name": "easymacro",
  "version": "1.0.0",
  "description": "EasyMacro Windows app",
  "main": "main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^30.1.2",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.easymacro.app",
    "productName": "EasyMacro",
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*"
    ],
    "asar": true,
    "win": {
      "target": [
        "portable"
      ]
    }
  }
}
